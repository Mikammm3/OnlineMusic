<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mika.music.mapper.MusicMapper">
    <insert id="insert">
        insert into music (title,singer,url,user_id) values(#{title},#{singer},#{url},#{userId})
    </insert>

    <update id="deleteByIds">
        update music
        set
        delete_flag = 1
        where id in
        <foreach collection="ids" separator="," item="id" open="(" close=")">
            #{id}
        </foreach>
    </update>

